<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.facturaFragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@mipmap/musicabel"
        >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rvJuegos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="15dp" />

        <android.support.design.circularreveal.cardview.CircularRevealCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/color"

            >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">

                <TableRow>

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/idItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="  Total de Articulos "
                        android:textSize="20dp"
android:textColor="@color/colorAzul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idNitems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="80dp"
                        android:text="0.0"
                        android:textSize="20dp"
                        android:textColor="@color/background_orage"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="  Sub Total "
                        android:textSize="20dp"
                        android:textColor="@color/colorAzul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="80dp"
                        android:text="0.0"
                        android:textColor="@color/colorAzul"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:paddingLeft="80dp"
                        android:text="  Total Descuestos"
                        android:textSize="20dp"
                        android:textColor="@color/colorAzul"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDesceuntos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="80dp"
                        android:text="0.0"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dip"
                        android:text="  Total a pagar"
                        android:textColor="@color/colorNegroOscuro"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/txtTotalPagar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="80dp"
                        android:text="0.0"
                        android:textSize="20dp"
                        android:textColor="@color/colorVerde"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </android.support.design.circularreveal.cardview.CircularRevealCardView>
    </LinearLayout>

    </ScrollView>
</FrameLayout>